<h1 class="text-center">Create new game</h1>

<div class="row justify-content-center">
  <div class="col-12 col-md-8">
    <%= simple_form_for @game do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :category, collection: Game::CATEGORIES, include_blank: false  %>
      <%= f.submit class: "btn btn-primary w-100" %>
    <% end %>
  </div>
</div>

